<% admin_page_title("Projects") %>
<div id="statusMessage" style="display:none"></div><br />
<div class="span-24">
  <%= link_to "Show this project", admin_project_url(@project) %> |
  <%= link_to "Add new screenshots", new_screenshots_admin_project_url(@project) %>
</div>
<hr />
<table class="simpleTable">
<% form_for [:admin, @project], :url => {:action => "update"} do |f| %>
	<tr><th colspan="3">Edit project</th></tr>
  <%= render :partial => "form", :locals => {:f => f} %>
	<tr>
		<td class="left">&nbsp;</td>
		<td class="right"><%= fancy_submit_button "Update" %></td>
    <td class="errorCol">&nbsp;</td>
	</tr>
<% end %>
</table>
