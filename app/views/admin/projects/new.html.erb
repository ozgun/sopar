<% admin_page_title("Projects") %>
<div id="statusMessage" style="display:none"></div><br />
<div class="span-24">
  <%= link_to "Back to Projects", admin_projects_url %>
</div>
<hr />

<% form_for [:admin, @project], :html => {:multipart => true} do |f| %>
<table class="simpleTable">
	<tr><th colspan="3">New Project</th></tr>
  <%= render :partial => "form", :locals => {:f => f} %>
	<tr>
		<td class="left">&nbsp;</td>
		<td class="right"><%= fancy_submit_button "Create" %></td>
    <td class="errorCol">&nbsp;</td>
	</tr>
</table>
<% end %>
<%= textile_editor_initialize -%>
