<tr id="row_<%= asset.id %>" style="height: 36px">
	 <td><%= link_to h(asset.filename), asset.public_filename %></td>
	 <td><%= number_to_human_size(asset.size) %>
	 <td><%= time_only_date(asset.created_at) %></td>
	<td>
		<%= link_to_remote image_tag("delete.png", :alt => "Delete", :title => "Delete"), 
			:url => "/admin/assets/#{asset.id}",
			:method => :delete, :confirm => "Are you sure?" %>
	</td>
</tr>
