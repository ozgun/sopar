<tr id="row_<%= static_page.id %>">
	<td>
		<%= link_to truncate(h(static_page.title), 40), admin_static_page_url(static_page) %>
	</td>
	<td>
		<%= time_only_date(static_page.created_at) %>
	</td>
	<td>
		<%= static_page.status_description %>
	</td>
	<td>
		<% if static_page.is_published == 0 %>
		<%= link_to image_tag("add.png", :title => "Publish", :alt => "Publish"),
			    publish_admin_static_page_url(static_page) %>
		<% end %>
		<% if static_page.is_published == 1 %>
		<%= link_to image_tag("cancel.png", :title => "Un-publish", :alt => "Un-publish"),
			    unpublish_admin_static_page_url(static_page) %>
		<% end %>
		<%= link_to image_tag("edit.png", :title => "Update", :alt => "Update"),
				  edit_admin_static_page_url(static_page) %>
		<%= link_to_remote image_tag("delete.png", :alt => "Delete", :title => "Delete"), 
          :url => "/admin/static_pages/#{static_page.id}", 
          :method => :delete, :confirm => "Are you sure?" %>
	</td>
</tr>
