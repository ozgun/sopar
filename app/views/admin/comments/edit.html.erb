<% admin_page_title("Comments") %>
<div id="statusMessage" style="display:none"></div><br />
<div class="span-24">
<%= link_to "Show this comment ", admin_article_comment_url(@article, @comment) %>
</div>
<hr />
<% form_for [:admin, @comment], :url => {:action => "update"} do |f| %>
<table class="simpleTable">
	<tr><th colspan="3">Edit Comment</th></tr>
  <%= render :partial => "form", :locals => {:f => f} %>
	<tr>
		<td class="left">&nbsp;</td>
		<td class="right"><%= fancy_submit_button "Update" %></td>
    <td class="errorCol">&nbsp;</td>
	</tr>
</table>
<% end %>
