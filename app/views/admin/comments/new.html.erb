<% admin_page_title("Comments") %>
<div id="statusMessage" style="display:none"></div><br />
<div class="span-24"><%= link_to "Back to Comments", admin_comments_url %></div>
<hr />
<table class="simpleTable">
<% form_for [:admin, @comment], :url => {:action => "create" } do |f| %>

	<tr><th colspan="3">New comment</th></tr>
  <%= render :partial => "form", :locals => {:f => f} %>
	<tr>
		<td class="left">&nbsp;</td>
		<td class="right"><%= fancy_submit_button "Create" %></td>
    <td class="errorCol">&nbsp;</td>
	</tr>
<% end %>
</table>
