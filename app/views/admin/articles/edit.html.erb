<% admin_page_title("Articles") %>
<div id="statusMessage" style="display:none"></div><br />
<div class="span-24">
<%= link_to "Show this article", admin_article_url(@article) %>
</div>
<hr />
<% form_for [:admin, @article], :url => {:action => "update"} do |f| %>
<table class="simpleTable">
	<tr><th colspan="3">Edit Article</th></tr>
  <%= render :partial => "form", :locals => {:f => f} %>
	<tr>
		<td class="left">&nbsp;</td>
		<td class="right"><%= fancy_submit_button "Update" %></td>
    <td class="errorCol">&nbsp;</td>
	</tr>
</table>
<% end %>
<%= textile_editor_initialize -%>
